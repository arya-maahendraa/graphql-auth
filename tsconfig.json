{
   "compilerOptions": {
      "target": "ES2018",
      "module": "commonjs",
      "lib": ["ES2018", "esnext"],
      "rootDir": ".",
      "outDir": "dist",
      "baseUrl": "src",
      "paths": {
         "@*": ["./*"],
         "@config": ["config"],
         "@components*": ["components*"],
         "@interfaces*": ["interfaces*"],
         "@web*": ["web*"]
      },
      "sourceMap": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "strict": true
   }
}
